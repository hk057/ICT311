<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/list_item_trip_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Trip Title"/>

    <TextView
        android:id="@+id/list_item_trip_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="Trip Date"
        android:layout_below="@+id/list_item_trip_title_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/list_item_trip_trip_type_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/list_item_trip_date_text_view"
        tools:text="Trip Type"/>
    <TextView
        android:id="@+id/list_item_trip_destination_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/list_item_trip_trip_type_text_view"
        tools:text="Trip Destination"/>
    <TextView
        android:id="@+id/list_item_trip_duration_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/list_item_trip_destination_text_view"
        tools:text="Duration"/>

    <TextView
        android:id="@+id/list_item_trip_comment_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/list_item_trip_duration_text_view"
        tools:text="Comment"/>

</RelativeLayout>