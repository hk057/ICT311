<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText android:id="@+id/setting_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a name"/>


    <EditText android:id="@+id/setting_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Gender"/>


    <EditText android:id="@+id/setting_sid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter SID number"/>


    <EditText android:id="@+id/setting_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email Address"/>


    <EditText android:id="@+id/setting_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comment Below"/>





</LinearLayout>